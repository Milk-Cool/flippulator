    "version": "0.2.0",
    "configurations": [
        {
            "name": "App launch",
            "type": "cppdbg",
            "request": "launch",
            "program": "${workspaceRoot}/out_${input:app_name}/${input:app_name}",
            "cwd": "${workspaceFolder}"
        }
    ],
    "inputs": [
        {
            "id": "app_name",
            "description": "App name:",
            "default": "example",
            "type": "promptString"
        }
    ]
}